@model IEnumerable<MVCDemo.Models.CustomField>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DemoClass.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FieldName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCheckBox)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsTextBox)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsInt)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DemoClass.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FieldName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsCheckBox)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsTextBox)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsInt)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
